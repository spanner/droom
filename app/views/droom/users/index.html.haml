- content_for :breadhead do
  = link_to t(:site_title), droom.root_url

- content_for :title_class do
  larger

- content_for :title do
  = t "headings.users"
  = link_to droom.new_user_url, :class => "addendum add", :remote => true, :data => {:action => "popup", :type => "html", :affected => "#users"} do
    %svg.icon
      %use{href: "/lms-sprites.svg#sprite-plus_button"}

- content_for :standfirst do
  %p
    = t(:users_introduction)

%section.standard
  %form.search_and_facet{:action => droom.users_url, :id => "user_search", data: {target: '#users'}}
    = hidden_field_tag :page, params[:page]
    = hidden_field_tag :show, params[:show]
    = hidden_field_tag :sort, params[:sort]

    .facet<
      %svg.prefix
        %use{href: "/lms-sprites.svg#sprite-next"}
      %span.label
        Filters

    .search<
      = text_field_tag :q, params[:q], name: 'q', class: 'search', placeholder: t(:search), data: {slow: true}
      %label{for: "q"}
        %svg.icon
          %use{href: "/lms-sprites.svg#sprite-search"}

  = render "droom/users/show/table", users: @users
