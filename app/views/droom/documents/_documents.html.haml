#documents.paginated
  %form.droom_faceter{:action => droom.documents_url, :id => "documents_search", data: {target: '#documents'}}
    = hidden_field_tag :page, params[:page]
    = hidden_field_tag :show, params[:show]
    = hidden_field_tag :sort, params[:sort]

    %fieldset.search<
      = text_field_tag :q, params[:q], name: 'q', class: 'search', placeholder: t(:search), data: {slow: true}
      = submit_tag t(:search)

    .document_selection
      = render "droom/documents/facets"
      = render "droom/documents/options"

  - if @q.present?
    %p
      Documents matching
      %strong
        = @q

  - if @documents.any?
    - if @documents.current_page > 1
      .pagination.upper
        = paginate @documents, :params => {:format => nil}

    - if @q.present?
      - @documents.with_highlights.each do |document, details|
        = render "droom/documents/document", document: document, details: details
    - else
      = render :partial => 'droom/documents/document', :collection => @documents

    .pagination.lower
      = paginate @documents, :params => {:format => nil}


  - else
    .nomatch
      %h2
        - if @q
          = t(:sorry_no_matches, q: @q).html_safe
        - else
          = t(:sorry_no_documents)
