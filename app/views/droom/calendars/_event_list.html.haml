- calendar ||= @calendar
- events ||= @events || calendar.events.future_and_current

#minor_events{:data => {:refreshing => true, :url => droom.calendar_url(calendar)}}
  - if events.any?
    = render :partial => "droom/events/minimal", :collection => events.sort_by(&:start)
  - else
    %p.note
      = t :no_external_events
