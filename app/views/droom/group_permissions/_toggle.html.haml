- group_permission ||= @group_permission
- group ||= @group
- permission ||= @permission

- unless group_permission
  - if @group_permissions
    - group_permission = @group_permissions[group.id][permission.id] if @group_permissions[group.id]
  - else
    - group_permission = permission.for_group(group).first

- group ||= group_permission.group
- permission ||= group_permission.permission
- linkid = "#{group.slug}_#{permission.slug.gsub('.', '_')}"

- if group_permission && !group_permission.destroyed?
  = link_to group_group_permission_url(group, group_permission), :id => linkid, :class => "yes", :method => :delete, :data => {:action => "replace", :replaced => "##{linkid}"} do
    %svg.icon
      %use{href: "#tick_button_symbol"}
- else
  = link_to group_group_permissions_url(group, :group_permission => {:permission_id => permission.id}), :id => linkid, :class => "no", :method => :post, :data => {:action => "replace", :replaced => "##{linkid}"} do
    %svg.icon
      %use{href: "#bare_cross_symbol"}
